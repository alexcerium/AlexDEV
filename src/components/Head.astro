---
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  author?: string;
}

const { title = "", description = "", keywords = "", author = "" } = Astro.props;

// Get base path for assets
const basePath = import.meta.env.PROD ? '/AlexDEV' : '';
---

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description} id="metaDescription">
    <meta name="keywords" content={keywords} id="metaKeywords">
    <meta name="author" content={author} id="metaAuthor">
    <title id="pageTitle">{title}</title>
    
    <!-- Import CSS files with correct base path -->
    <link rel="stylesheet" href={`${basePath}/css/tokens.css`}>
    <link rel="stylesheet" href={`${basePath}/css/base.css`}>
    <link rel="stylesheet" href={`${basePath}/css/layout.css`}>
    <link rel="stylesheet" href={`${basePath}/css/typography.css`}>
    <link rel="stylesheet" href={`${basePath}/css/components.css`}>
    <link rel="stylesheet" href={`${basePath}/css/utilities.css`}>
    <link rel="stylesheet" href={`${basePath}/css/animations.css`}>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
