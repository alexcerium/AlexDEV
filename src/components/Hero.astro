---
// Hero section component
---

<section id="home" class="hero">
    <div class="hero-background"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title" id="heroTitle"></h1>
            <div class="hero-left">
                <ul class="hero-bullet-list" id="heroBulletList"></ul>
                <div class="hero-buttons">
                    <button class="btn btn-primary magnetic" onclick="scrollToProjects()">
                        <span id="downloadResumeText"></span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                    <button class="btn btn-secondary magnetic" onclick="scrollToContact()">
                        <span id="contactMeText"></span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>
            <div class="hero-right">
                <div class="hero-image">
                    <img src="" alt="Hero Visual" class="hero-visual" id="heroImage" loading="lazy">
                </div>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
    </div>
</section>
